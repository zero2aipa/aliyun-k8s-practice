# ============================================================
# 00_cluster.env
# 全局配置：所有安装脚本共用
# ============================================================

# ========== 节点与账号 ==========
SSH_USER="root"
SSH_PASS="YourRootPassword"
ROOT_PASS="YourRootPassword"
SSH_PORT=22

# Master 与 Node 节点定义
ALL_MASTERS=("10.0.1.1")
ALL_WORKERS=("10.0.2.1" "10.0.2.2")
ALL_NODES=("10.0.1.1" "10.0.2.1" "10.0.2.2")

# 主机名前缀（可选：01 脚本中可自动命名节点）
HOST_PREFIX="k8s"

# 控制平面 IP（用于 kubeadm init）
CONTROL_PLANE_IP="10.0.1.1"

# Kubernetes 版本（APT 包版本号）
# 例如：1.28.0-00；留空=使用最新可用版本
K8S_VERSION="1.28.0-1.1"

# ========== 语言/时区 ==========
LANG_TO_SET="zh_CN.UTF-8"
TIMEZONE="Asia/Shanghai"

# ========== 安装与缓存 ==========
PKG_CACHE_DIR="/opt/k8s-pkg-cache"
CRICTL_VERSION="v1.28.0"  # 回退版本（APT 不可用时使用）

# ========== 网络与镜像 ==========
POD_CIDR="192.168.0.0/16"

# Pause 镜像（用于容器运行时 Sandbox）
PAUSE_IMAGE="registry.aliyuncs.com/google_containers/pause:3.9"

# Kubernetes APT 源
ALIYUN_K8S_APT="https://mirrors.aliyun.com/kubernetes/apt"

# Docker Hub 国内镜像加速
DAOCLOUD_MIRROR="https://docker.m.daocloud.io"
NETEASE_MIRROR="https://hub-mirror.c.163.com"
BAIDU_MIRROR="https://mirror.baidubce.com"
